---
import { Icon } from "astro-icon";

export interface Props {
  md_github_url?: string;
}

const { md_github_url } = Astro.props;
---

<footer class="bg-slate-700 text-gray-400">
  <div class="container-lg py-6 text-center font-light">
    {
      md_github_url && (
        <>
          <Icon name="mdi:github" class="mr-3 -mt-1 inline h-6 w-6" />
          Source:
          <a
            href={md_github_url}
            class=" ml-1 underline decoration-1 underline-offset-[5px] hover:no-underline"
          >
            {md_github_url}
          </a>
        </>
      )
    }
    <slot />
  </div>
</footer>
