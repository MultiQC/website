---
import BaseLayout from "@layouts/BaseLayout.astro";
import Hero from "@layouts/Hero.astro";
import { Icon } from "astro-icon";
---

<BaseLayout title="MultiQC Logos">
  <Hero>
    <div class="container-lg relative">
      <h1 class="typo-h2">Grab some MultiQC logos!</h1>
      <p class="typo-blockquote mt-4 lg:mt-8">
        Perfect for talks, posters, stickers, desktop backgrounds or whatever else you fancy!
      </p>
    </div>
  </Hero>
  <div class="container-lg py-20 antialiased">
    <div class="grid-cols-2 gap-8 lg:grid">
      <div>
        <h2 class="typo-h3 mb-4">Introduction</h2>
        <p class="typo-body mb-4">
          The MultiQC logos are available at
          <a href="https://github.com/MultiQC/logo" class="typo-link"
            >https://github.com/MultiQC/logo</a
          >
          and are included below for convenience. You are free to use the MultiQC logos in any way you
          wish. They are available under the
          <a href="https://choosealicense.com/licenses/mit/" class="typo-link">MIT licence</a>.
        </p>
        <p class="typo-body mb-4">
          If possible, please try to link back to the main MultiQC website when you use a logo:
          <a href="https://multiqc.info/" class="typo-link">https://multiqc.info/</a>.
        </p>
        <p class="typo-body">
          Need another variant? Let me know on the
          <a href="https://gitter.im/ewels/MultiQC" class="typo-link">MultiQC Gitter chat!</a>
        </p>
      </div>
      <div>
        <h3 class="typo-h4 mb-4">Design Details</h3>
        <dl class="typo-body row mb-4">
          <dt class="col-3 text-right font-semibold">Font:</dt>
          <dd class="col-9">
            Roboto Medium 500 (available from
            <a href="https://fonts.google.com/specimen/Roboto" class="typo-link">Google Fonts</a>
            )
          </dd>
          <dt class="col-3 text-right font-semibold">Text Colour:</dt>
          <dd class="col-9">
            <span
              class="rounded-sm px-2 py-1 font-mono text-sm text-white"
              style="background-color:#000000;">#000000</span
            >
          </dd>
          <dt class="col-3 text-right font-semibold">Colour 1:</dt>
          <dd class="col-9">
            <span
              class="rounded-sm px-2 py-1 font-mono text-sm text-white"
              style="background-color:#BE1622;">#BE1622</span
            >
          </dd>
          <dt class="col-3 text-right font-semibold">Colour 2:</dt>
          <dd class="col-9">
            <span
              class="rounded-sm px-2 py-1 font-mono text-sm text-white"
              style="background-color:#009640;">#009640</span
            >
          </dd>
          <dt class="col-3 text-right font-semibold">Colour 3:</dt>
          <dd class="col-9">
            <span
              class="rounded-sm px-2 py-1 font-mono text-sm text-white"
              style="background-color:#1D71B8;">#1D71B8</span
            >
          </dd>
        </dl>
      </div>
    </div>

    <div class="my-8 grid grid-cols-1 gap-12 lg:grid-cols-2">
      <div class="grid place-items-center bg-gray-200 p-1">
        <img class="max-h-44 w-10/12 p-4" src="../logos/multiqc_logo.svg" alt="MultiQC Logo" />
      </div>
      <div>
        <h3 class="typo-h4 mb-4">MultiQC Logo</h3>
        <ul class="typo-body text-blue-600 dark:text-blue-400">
          <li>
            <a href="../logos/multiqc_logo.png" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              PNG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo.svg" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              SVG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo.ai" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              Illustrator</a
            >
          </li>
        </ul>
      </div>
      <div class="grid place-items-center bg-gray-800 p-1">
        <img
          class="max-h-44 w-10/12 p-4"
          src="../logos/multiqc_logo_darkbg.svg"
          alt="MultiQC Logo, dark backgrounds"
        />
      </div>
      <div>
        <h3 class="typo-h4 mb-4 mr-10">MultiQC Logo (dark background)</h3>
        <ul class="typo-body text-blue-600 dark:text-blue-400">
          <li>
            <a href="../logos/multiqc_logo_darkbg.png" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              PNG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo_darkbg.svg" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              SVG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo_darkbg.ai" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              Illustrator</a
            >
          </li>
        </ul>
      </div>
    </div>
    <div class="my-8 grid grid-cols-1 gap-8 lg:grid-cols-4">
      <div class="grid place-items-center bg-gray-200 p-1">
        <img
          class="max-h-44 w-10/12 p-4"
          src="../logos/multiqc_logo_square.svg"
          alt="MultiQC Square Thumbnail"
        />
      </div>
      <div>
        <h3 class="typo-h4 mb-4 mr-10">MultiQC Square Thumb</h3>
        <ul class="typo-body text-blue-600 dark:text-blue-400">
          <li>
            <a href="../logos/multiqc_logo_square.png" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              PNG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo_square.svg" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              SVG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo_square.ai" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              Illustrator</a
            >
          </li>
        </ul>
      </div>
      <div class="grid place-items-center bg-gray-200 p-1">
        <img
          class="max-h-44 w-10/12 p-4"
          src="../logos/multiqc_logo_circle.svg"
          alt="MultiQC Circle Thumbnail"
        />
      </div>
      <div>
        <h3 class="typo-h4 mb-4 mr-10">MultiQC Circle Thumb</h3>
        <ul class="typo-body text-blue-600 dark:text-blue-400">
          <li>
            <a href="../logos/multiqc_logo_circle.png" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              PNG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo_circle.svg" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              SVG</a
            >
          </li>
          <li class="mt-4">
            <a href="../logos/multiqc_logo_circle.ai" class="typo-link-no-underline">
              <Icon class="-mt-1 mr-2.5 h-6 w-6 inline" name="mdi:arrow-down-bold-circle-outline" />
              Illustrator</a
            >
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>

<style lang="scss"></style>
